<div class="col-md-4"></div>

<div class="col-md-4" >
	<div class="panel panel-default">
		<div class="panel-heading"><strong>Login</strong></div>
		<div class="panel-body">


			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="input-group input-group-lg fill-horizontal">
				<%= f.email_field :email, autofocus: true, placeholder: "Username", class: "form-control"  %>
			</div>

			<div class="input-group input-group-lg fill-horizontal">
				<%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
			</div>

			<div class="col-md-12" style="height:15px"></div>	

			<div class="col-md-4" style=" padding-left: 0px;padding-right: 0px"><%= f.submit "Sign in", class: "btn btn-primary fill-horizontal" %></div>
			<div class="col-md-8">
				<% if devise_mapping.rememberable? -%>
				<div class="checkbox no-bottom-margin">
					<label>
						<%= f.check_box :remember_me %> Remember me
					</label>
				</div>
				<% end -%>
			</div>

			<% end %>

			<%= render "devise/shared/links"  %>
		</div>
	</div>
</div>

<div class="col-md-4"></div>